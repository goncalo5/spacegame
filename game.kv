

<ResourcesBar@BoxLayout>:
    orientation: "horizontal"
    size_hint_y: None
    height: app.window.height * 0.1
    Button:
        text: "Main"
        on_press:
            app.construction.clean_display()
            app.game.current = "main_screen"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Metal"
        Label:
            text: str(int(app.metal.current))
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Crystal"
        Label:
            text: str(int(app.crystal.current))
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Deuterium"
        Label:
            text: str(int(app.deuterium.current))

<ButtonUpgrade@Button>:
    size_hint: None, None
    size: 250, 250
    construction: None
    construction_name: None
    construction_n: None
    on_press:
        print("main")
        app.construction.display_costs(root.construction)
    RelativeLayout:
        pos: self.parent.pos
        size: self.parent.size
        Label:
            text: "%s" % root.construction_name
        Label:
            text: "%s" % root.construction_n
            size_hint: None, None
            pos_hint: {"right": 1}
        Button:
            text: "+1"
            size_hint: None, None
            pos_hint: {"top": 1}
            on_press:
                root.construction.upgrade(root.construction_queue, 1)

<MainScreen@Screen>:
    BoxLayout:
        orientation: "vertical"
        ResourcesBar
        Button:
            text: "Buildings"
            on_press: root.manager.current = "buildings_screen"
        Button:
            text: "Defenses"
            on_press: root.manager.current = "defenses_screen"
        Button:
            text: "Research"
            on_press: root.manager.current = "research_screen"

<DisplayMenu@BoxLayout>:
    orientation: "vertical"
    construction_queue: None
    button_to_upgrade_name: "Upgrade"
    have_textinput: 0
    Label:
        text: app.construction.name
    BoxLayout:
        orientation: "horizontal"
        size_hint_h: 0.1
        Label:
            text: "%s" % app.construction.time_cost
        TextInput:
            id: input_construct
            opacity: root.have_textinput and app.construction.have_textinput
        Button:
            text: "%s" % root.button_to_upgrade_name
            on_press:
                app.construction.current_selected.upgrade(root.construction_queue, input_construct.text)
            opacity: app.construction.have_button
            disabled: not app.construction.have_button

    BoxLayout:
        orientation: "horizontal"
        size_hint_h: 0.1
        Label:
            text: app.construction.metal_cost
        Label:
            text: app.construction.crystal_cost
        Label:
            text: app.construction.deuterium_cost

<UpgradingQueue@BoxLayout>:
    id: construction_queue
    orientation: "horizontal"
    size_hint_y: None
    height: 0
    Label:
        text: "%s" % app.construction.name
        opacity: app.construction.have_queue
    Label:
        text: "%s" % app.construction.time_left
        opacity: app.construction.have_queue
    Button:
        text: "cancel"
        opacity: app.construction.have_queue and app.construction.have_cancel_button
        disabled: not app.construction.have_queue and app.construction.have_cancel_button
        on_press:
            print("cancel")
            app.construction.cancel()

<DefensesScreen@Screen>:
    BoxLayout:
        orientation: "vertical"
        ResourcesBar
        DisplayMenu:
            construction_queue: construction_queue
            button_to_upgrade_name: "Build"
            have_textinput: 1
        RecycleView:
            StackLayout:
                size_hint_y: None
                height: self.minimum_height
                ButtonUpgrade:
                    construction: app.rocketlauncher
                    construction_name: app.rocketlauncher.name
                    construction_n: app.rocketlauncher.n
                    construction_queue: construction_queue
                ButtonUpgrade:
